<% if current_user.already_liked?(post) %>
  <% like = current_user.likes.find_by(post_id: post.id) %>
  <%= link_to book_post_like_path(post.book, post, like), method: :delete, remote: true, data: { turbolinks: false } do %>
    <i class="fa-solid fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %> いいね
  <% end %>
<% else %>
  <%= link_to book_post_likes_path(post.book, post), method: :post, remote: true, data: { turbolinks: false } do %>
    <i class="fa-regular fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %> いいね
  <% end %>
<% end %>
