<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center my-4">レビューの編集</h1>

      <%= form_with model: @post, url: book_post_path(@book), html: { class: 'form-horizontal' } do |form| %>
        <div class="main-rating">
          <div class="edit-ratings mb-3">
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
          </div>
          <div class="ms-3 edit-rating-value-display"><span id="edit-rating-value-display">0</span>/5</div>
        </div>
        <%= form.hidden_field :book_id, value: @book.id %>
        <%= form.hidden_field :difficulty, id: "edit-rating-value" %>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", rows: 5 %>
        </div>

        <div class="d-grid">
          <%= form.submit "更新", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'edit_post.js' %>
