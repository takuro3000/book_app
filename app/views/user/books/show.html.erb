<main class="container mt-4">
    <div class="row">
        <!-- Book Info Section -->
        <div class="col-md-3">
            <div class="book-info text-center">
                <%= image_tag @book.image ,class:"book-img-top"%>
                <h5 class="mt-3"><%= @book.title%></h5>
                <p><%= @book.author%></p>
            </div>
            <!-- Sidebar content: ratings, related books -->
            <div class="side-section">
                <h6>その他情報</h6>
                <p>出版日: <%= @book.published_day%></p>
                <p>ページ数: <%= @book.volume%></p>
                <p>言語: <%= @book.language%></p>
                <p>出版社: <%= @book.company%></p>
                <a href="<%= @book.link%>">Amazon Link </a>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="col-md-9">
            <!-- Book Details -->
            <section class="mb-4">
                <h4>難易度評価</h4>
                <div class="star-rating mb-2">
                    <div class="star-rating-front" style="width: <%= @book.post_difficulty_percentage %>%">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                </div>
            </section>

            <!-- User Comments/Activities Section -->
            <section>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>自分の投稿</h4>
                    <% if @user_posts.any?%>
                        <%= link_to edit_book_post_path(@book) do %>
                            編集する
                        <% end %>
                    <% else %>
                        <%= link_to new_book_post_path(@book) do %>
                            投稿する
                        <% end %>
                    <% end %>
                </div>
                <% if @user_posts.any?%>
                    <% @user_posts.each do |post| %>
                        <div class="comment-section">
                            <div class="d-flex align-items-start">
                                <%= image_tag current_user.icon ,class:"icon-img rounded-circle me-3"%>
                                <div>
                                    <%= link_to user_path(current_user) do %>
                                        <h6><%= current_user.name %> <%= current_user.level%></h6>
                                    <% end %>
                                    <div class="star-rating mb-2">
                                        <div class="star-rating-front" style="width: <%= post.difficulty.round(1).to_f*100/5 %>%">★★★★★</div>
                                        <div class="star-rating-back">★★★★★</div>
                                    </div>
                                    <p><%= post.content %></p>
                                    <small class="text-muted">投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></small>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% else %>
                    <div class="comment-section">
                        <div class="d-flex align-items-start">
                            <%= image_tag current_user.icon ,class:"icon-img rounded-circle me-3"%>
                            <div>
                                <%= link_to user_path(current_user) do %>
                                    <h6><%= current_user.name %> <%= current_user.level%></h6>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>ユーザーの投稿</h4>
                </div>
                <!-- Repeat this block for each comment -->
                <% @posts.each do |post| %>
                    <div class="comment-section">
                        <div class="d-flex align-items-start">
                            <%= image_tag post.user.icon ,class:"icon-img rounded-circle me-3"%>
                            <div>
                                <%= link_to user_path(post.user) do %>
                                    <h6><%= post.user.name %> <%= post.user.level%></h6>
                                <% end %>
                                <div class="star-rating mb-2">
                                    <div class="star-rating-front" style="width: <%= post.difficulty.round(1).to_f*100/5 %>%">★★★★★</div>
                                    <div class="star-rating-back">★★★★★</div>
                                </div>
                                <p><%= post.content %></p>
                                <small class="text-muted" id="like_btn_<%= post.id %>">
                                    <%= render "user/likes/btn", post: post %>
                                </small>
                                <small class="text-muted">投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></small>
                            </div>
                        </div>
                    </div>
                <% end %>
                <!-- More comments go here -->
            </section>
        </div>
    </div>
</main>