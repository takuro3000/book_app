<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>本を探す</h2>
      <%= render 'user/books/search' %>
  </div>
  <% @books.each do |book| %>
    <%= link_to book_path(book) do%>
      <div class="row border p-3">
          <!-- Product Image -->
          <div class="col-md-3">
              <%= image_tag book.image ,class:"book-img"%>
          </div>

          <!-- Product Information -->
          <div class="col-md-9">
              <h4 class="mb-2"><%= book.title %></h4>
              <p><%= book.author%> | <span><%= book.published_day%></span></p>
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= book.post_difficulty_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <!-- Rating -->
              <div class="mb-2">
                  <span class="text-muted">投稿数：<%= book.posts.count %></span>
              </div>
          </div>
      </div>
    <% end %>
  <% end %>
</div>