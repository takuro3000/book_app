<%= search_form_for @q, url: books_path, method: :get do |f| %>
  <%= f.search_field :title_or_author_cont, placeholder: 'キーワード検索' %>

  <%= f.label :category_eq, "カテゴリー" %>
  <%= f.select :category_eq, options_for_select(@categories), { include_blank: '選択してください' } %>

  <%= f.label :avg_difficulty, "難易度" %>
  <%= f.number_field :avg_difficulty_gteq, step: 0.1 %>以上
  <%= f.number_field :avg_difficulty_lteq, step: 0.1 %>以下

  <%= f.submit '検索' %>
  <%= sort_link(@q, :published_day, "出版年順") %>
  <%= sort_link(@q, :posts_count, "投稿数順") %>
<% end %>