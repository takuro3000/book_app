<div id="book_form_fields">
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, id: 'book_title', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: 'form-label' %>
    <%= form.text_field :author, id: 'book_author', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, id: 'book_description', class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :published_day, class: 'form-label' %>
    <%= form.date_field :published_day, id: 'book_published_day', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :volume, class: 'form-label' %>
    <%= form.number_field :volume, id: 'book_volume', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :language, class: 'form-label' %>
    <%= form.text_field :language, id: 'book_language', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company, class: 'form-label' %>
    <%= form.text_field :company, id: 'book_company', class: 'form-control' %>
  </div>
</div>

