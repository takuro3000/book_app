<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header">
          <h1 class="h4 mb-0">New Book</h1>
        </div>
        <div class="card-body">
          <%# 検索用フォーム（Turbo Stream対応） %>
          <%= form_with url: search_admin_books_path, method: :get, data: { turbo_stream: true }, class: "mb-3" do |search_form| %>
            <%= search_form.label :title, "タイトルで検索", class: 'form-label' %>
            <div class="input-group">
              <%= search_form.text_field :title, class: 'form-control', placeholder: '書籍タイトルを入力' %>
              <%= search_form.submit "検索", class: "btn btn-outline-secondary" %>
            </div>
          <% end %>

          <div id="search_result" class="mb-3"></div>

          <%# 書籍登録用フォーム %>
          <%= form_with model: @book, url: admin_books_path, local: true do |form| %>
            <%= render "book_form_fields", form: form %>

            <div class="mb-3">
              <%= form.label :link, class: 'form-label' %>
              <%= form.text_field :link, id: 'book_link', class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= form.label :category, class: 'form-label' %>
              <%= form.text_field :category, id: 'book_category', class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= form.label :image, class: 'form-label' %>
              <%= form.file_field :image, id: 'book_image', class: 'form-control' %>
            </div>

            <div class="d-grid">
              <%= form.submit "投稿", class: "btn btn-orange" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
