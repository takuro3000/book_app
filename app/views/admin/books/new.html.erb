<h1>New Book</h1>

<%= form_with model: @book , url: admin_books_path do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :difficulty %><br>
    <%= form.number_field :difficulty %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "投稿"%>
  </div>
<% end %>
