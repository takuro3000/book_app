<div class="container my-4">

  <!-- ==========================
       投稿数の多い本
       ========================== -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>投稿数の多い本</h4>
  </div>

  <!-- PC用カルーセル (md以上) -->
  <div class="d-none d-md-block">
    <%= render partial: 'pages/carousel', locals: { 
          carousel_id: 'postCarouselDesktop', 
          items: @books_post, 
          slice_size: 4 
        } %>
  </div>

  <!-- モバイル用カルーセル (md未満) -->
  <div class="d-block d-md-none">
    <%= render partial: 'pages/carousel', locals: { 
          carousel_id: 'postCarouselMobile', 
          items: @books_post, 
          slice_size: 1 
        } %>
  </div>

  <!-- ==========================
       新着の本
       ========================== -->
  <div class="d-flex justify-content-between align-items-center mb-3 mt-5">
    <h4>新着の本</h4>
  </div>

  <!-- PC用カルーセル (md以上) -->
  <div class="d-none d-md-block">
    <%= render partial: 'pages/carousel', locals: { 
          carousel_id: 'newCarouselDesktop', 
          items: @books_new, 
          slice_size: 4 
        } %>
  </div>

  <!-- モバイル用カルーセル (md未満) -->
  <div class="d-block d-md-none">
    <%= render partial: 'pages/carousel', locals: { 
          carousel_id: 'newCarouselMobile', 
          items: @books_new, 
          slice_size: 1 
        } %>
  </div>

</div>
